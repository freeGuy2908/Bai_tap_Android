<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="right|center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="86dp"
        android:layout_weight="1"
        android:background="#DADADA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="2dp"
        android:orientation="vertical">
<!--    row 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnCE"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CE"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btnC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="BS"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <!--    row 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btnMul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <!--    row 3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btnSub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <!--    row 4-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <!--    row 5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnJjd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="36dp"
                android:gravity="center"
                android:background="#DADADA"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="36dp"
                android:gravity="center"
                android:background="#C3C6C9"
                android:layout_margin="2dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>